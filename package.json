  "devDependencies": {
    "@types/node": "^22.7.5",
    "cmake-js": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.1",
    "node-addon-api": "^8.2.1"
  }
}
