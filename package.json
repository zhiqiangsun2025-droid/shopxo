{
  "name": "mt-copy-trader",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:ts && npm run build:native",
    "build:ts": "tsc -p tsconfig.json",
